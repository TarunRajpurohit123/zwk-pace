{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-new-shopby-look section-{{ section.id }}-padding">
  <div class="page-width">
    <h2>{{ section.settings.title }}</h2>
  </div>

   <div class="shopby-look mainlogp-shopby-{{ section.id }}">
      {%- for block in section.blocks -%}
        <div class="coll--itemblock-look">
          <a href="{{ block.settings.coll_link }}">
            {% if block.settings.imgblock != blank %}
              <div class="img-block">
                <img
                  src="{{ block.settings.imgblock | img_url: 'master' }}"
                  alt="{{ block.settings.imgblock.alt }}"
                  width="auto"
                  height="auto"
                  loading="lazy"
                >
              </div>
            {% endif %}
           
          </a>
        </div>
      {% endfor %}
    </div>
  
</div>

<script>
  $(document).ready(function() {
    $('.mainlogp-shopby-{{ section.id }}').slick({
      arrows: true,
      dots: false,
      slidesToShow: 4,
      slidesToScroll: 2,
      centerPadding: '60px',
       centerMode: true,
     // prevArrow: $('.prevsrev--{{ section.id }}'),
     // nextArrow: $('.nextsrev--{{ section.id }}'),
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 3,
            infinite: false,
            dots: false
          }
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            dots: false,
            pauseOnHover:false
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: false,
            pauseOnHover:false
          }
        }
      ]
    });
    $('.mainlogp-shopby-{{ section.id }}').on('touchstart', e => {
  $('.mainlogp-shopby-{{ section.id }}').slick('slickPlay');
});
  });
</script>
<style>
  .section-new-shopby-look h2 {
    font-size: 34px;
    font-weight: 600;
    letter-spacing: 0;
    text-transform: capitalize;
}
   @media screen and (max-width: 800px) {
 .section-new-shopby-look h2 {
    font-size: 25px;
 }
   }
</style>
{% schema %}
  {
  "name": "New Shop By looks",
  "tag": "section",
  "class": "section new-shopbyl-block",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
     "blocks": [
    {
      "type": "image",
      "name": "look book Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "imgblock",
          "label": "t:sections.collage.blocks.image.settings.image.label"
        },
         {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          },
        {
            "type": "url",
            "id": "coll_link",
            "label": "Link"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Shop By looks"
    }
  ]
}
{% endschema %}

